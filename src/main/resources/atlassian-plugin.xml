<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <application-version min="3.0"/>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/gradleIcon.png</param>
        <param name="plugin-logo">images/gradleLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="i18n/english"/>
    
    <!-- add our web resources -->
    <web-resource key="bamboo_plugin_gradlew-resources" name="bamboo_plugin_gradlew Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="bamboo_plugin_gradlew.css" location="/css/bamboo_plugin_gradlew.css"/>
        <resource type="download" name="bamboo_plugin_gradlew.js" location="/js/bamboo_plugin_gradlew.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>bamboo_plugin_gradlew</context>
    </web-resource>
    
    <taskType name="helloworld" class="de.schramke.bamboo.plugins.gradlew.GradleBuildTask" key="test">
        <description>A simple Hello World Task</description>
        <!-- Categories available in 3.1: "builder", "test" and "deployment" -->
        <category name="builder"/>
        <configuration class="de.schramke.bamboo.plugins.gradlew.GradleTaskConfigurator"/>
        <resource type="freemarker" name="edit" location="template/editGradleTask.ftl"/>
        <resource type="freemarker" name="view" location="template/viewGradleTask.ftl"/>
    </taskType>
    
    <!-- import from the product container -->
    <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties" />
    
</atlassian-plugin>